<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10"
    android:elevation="10dp"
    app:cardCornerRadius="@dimen/dp_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >


        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="作者:"
            android:textColor="#BF757575"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_author"
            android:text="daimajia"
            android:textColor="#000"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="android"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/item_desc_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_author"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="搞机番外篇：三个曲面屏环绕打LOL算不算作弊？"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/item_img_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_desc_tv"
            android:layout_marginTop="10dp"
            android:background="@mipmap/bg"
            />

        <TextView
            android:id="@+id/item_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_img_iv"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="2017-10-13 12:45:36"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_time_tv"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/transparent_button_shape"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="收藏"
            android:textColor="@color/white"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>